  width: 100%;
  margin-top: 50rpx;
  height: 200rpx;
}
page .play-wrapper .scroll-wrapper .scroll .scroll-center .lrc-wrapper .lrc-content {
  width: 100%;
  height: 100%;
  overflow: hidden;
}
page .play-wrapper .scroll-wrapper .scroll .scroll-center .lrc-wrapper .lrc-content .lrc-text {
  width: 100%;
  text-align: center;
  font-size: 24rpx;
  line-height: 40rpx;
  margin: 10rpx 0;
